{
  "manifest_version": 3,
  "name": "Reader",
  "description": "Reader",
  "version": "1.0",

  "action": { "default_icon": "hello.png", "default_popup": "popup.html" },
  "icons": {
    "16": "hello.png"
  },
  "permissions": ["scripting", "storage", "webNavigation"],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["script.js"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}

{
  "manifest_version": 3,
  "name": "Reader",
  "description": "Reader",
  "version": "2.0",

  "action": {
    "default_icon": "./img/icon_16.png",
    "default_popup": "./html/popup.html"
  },
  "icons": {
    "16": "./img/icon_16.png",
    "48": "./img/icon_48.png",
    "64": "./img/icon_64.png",
    "128": "./img/icon_128.png",
    "264": "./img/icon_256.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "webNavigation",
    "activeTab",
    "readingList"
  ],
  "commands": {
    "com-start": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Start or stop reading mode"
    },
    "com-add-p": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Add +1 paragraph"
    },
    "com-rem-p": {
      "suggested_key": {
        "default": "Alt+Z"
      },
      "description": "-1 paragraph"
    },
    "com-go-next-page": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Go to next page"
    }
  },
  "background": {
    "service_worker": "./js/background.js"
  },
  "options_ui": {
    "page": "./html/options.html",
    "open_in_tab": true
  }
}
